<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        Where will you go?<br><br>
      </h3>
    </div>
  </div>
</section>



<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

        <%= form_with url: options_path do |f| %>

          <div class="row mb-3">
            <%= f.label :国, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.collection_select(:country_id, Country.all, :id, :name) %>
            </div>
          </div>

          <%= f.submit '選択', class: "btn btn-primary" %>

        <% end %>
      </div>
    </div>
  </div>
</section>