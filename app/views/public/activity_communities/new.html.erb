<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        仲間を募集する<br><br>
      </h3>
    </div>
  </div>
</section>

<section class="section mt-5">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

          <%= form_with model: @activity_community, url: activity_activity_communities_path(@activity) do |f| %>

            <div class="row mb-3">
              <%= f.label :タイトル, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.text_field :title, class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <%= f.label :募集内容, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.text_field :body, class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <%= f.label :募集開始日, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.date_select :start_date, class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <%= f.label :募集終了日, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.date_select :end_date, class: "form-control" %>
              </div>
            </div>

            <%= f.submit "送信する" %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</section>