<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        <%= @guesthouse_community.customer.user_name %>のコミュニティ<br><br>
        ゲストハウス：<%= @guesthouse_community.guesthouse.name %>
      </h3>
    </div>
  </div>
</section>

<section class="section mt-5">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

          <%= form_with model: @guesthouse_community_comment, url: guesthouse_community_guesthouse_community_comments_path(@guesthouse_community.id) do |f| %>

            <div class="row mb-3">
              <%= f.label :コメント, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.text_area :body, class: "form-control" %>
              <div style="margin-top :5px;"><%= f.submit "送信する" %></div>
              <% end %>
              </div>
            </div>

            <table class="table table-primary">
              <thead>
                <tr>
                  <th scope="col">ユーザー名</th>
                  <th scope="col">コメント</th>
                  <th scope="col"></th>
                </tr>
              </thead>

              <tbody>
                <% @guesthouse_community_comments.each do |comment| %>
                <tr>
                  <td>
                    <% if comment.customer.image.attached? %>
                      <%= image_tag comment.customer.image, class: "rounded-circle", size: "50x50" %>
                    <% else %>
                      <%= image_tag 'no_image', size: "100x100" %>
                    <% end %>
                    <%= comment.customer.user_name %>
                  </td>
                  <td><%= comment.body %></td>
                  <td>
                    <%= link_to "削除する", guesthouse_community_guesthouse_community_comment_path(@guesthouse_community, comment.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>

      </div>
    </div>
  </div>
</section>
