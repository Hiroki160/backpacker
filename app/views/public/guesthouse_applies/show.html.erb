<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        現在申請中<br><br>
      </h3>

      <table class="table table-primary">
        <thead class="table-active">
        	<tr>
        		<th scope="col">タイトル</th>
        		<th scope="col">募集内容</th>
        		<th scope="col">募集開始</th>
        		<th scope="col">募集終了</th>
        		<th scope="col"></th>
        	</tr>
        </thead>

        <tbody>
          <% @guesthouse_applies.each do |apply| %>
            <tr>
              <td><%= apply.guesthouse_community.title %></td>
              <td><%= apply.guesthouse_community.body %></td>
              <td><%= apply.guesthouse_community.start_date %></td>
              <td><%= apply.guesthouse_community.end_date %></td>
              <td><%= apply.status_i18n %></td>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</section>
