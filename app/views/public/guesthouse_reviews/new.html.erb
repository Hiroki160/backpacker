<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        レビューを書く<br><br>
      </h3>
    </div>
  </div>
</section>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

        <div class="rating-box mt-3">
          <%= form_with model: @guesthouse_review, url: guesthouse_guesthouse_reviews_path(@guesthouse) do |f| %>
          <div class="main-rating">
            <div class="ratings mb-3">
              <div id="evaluate_stars">評価</div>
                <script>
                  $('#evaluate_stars').raty({
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    scoreName: 'guesthouse_review[guesthouse_score]', //登録するモデル名とカラム名を記述
                    // target: '#rating-value-display',
                    targetType: 'number',
                    targetKeep: true,
                    // precision: true,
                    round : { down: .4, full: .6, up: 5 },
                    half: true
                  });
                </script>
              </div>
          </div>
    <%= f.text_area :guesthouse_content, class: "textarea" %>
    <%= f.submit "保存", class: "button mt-3" %>
  <% end %>
</div>

      </div>
    </div>
  </div>
</section>