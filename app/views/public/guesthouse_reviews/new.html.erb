<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        レビューを書く<br><br>
      </h3>
    </div>
  </div>
</section>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

        <div class="rating-box mt-3">
          <%= form_with model: @guesthouse_review, url: guesthouse_guesthouse_reviews_path(@guesthouse) do |f| %>
            <div class="main-rating">
              <div class="ratings mb-3">
                <script>
                  $('#evaluate_stars').raty({
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    scoreName: 'guesthouse_review[guesthouse_score]' //登録するモデル名とカラム名を記述
                  });
                </script>
                <!--<span class="fa fa-star" id="star"></span>-->
                <!--<span class="fa fa-star" id="star"></span>-->
                <!--<span class="fa fa-star" id="star"></span>-->
                <!--<span class="fa fa-star" id="star"></span>-->
                <!--<span class="fa fa-star" id="star"></span>-->
              </div>
              <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5</div>
          </div>
    <%= f.text_field :guesthouse_content, class: "textarea" %>
    <%= f.submit "保存", class: "button mt-3" %>
    <p>戻る</p>
  <% end %>
</div>

      </div>
    </div>
  </div>
</section>