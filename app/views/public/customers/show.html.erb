<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        <%= @customer.name %>さんのプロフィール<br><br>
          <% if @customer.image.attached? %>
            <%= image_tag @customer.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
      </h3>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

      <div class="field form-inline">
        <h4 style="margin-right:5%;">名前</h4>
        <p class="field" style="margin-right:5%;"><%= @customer.name %></p>
      </div>

      <div class="field form-inline">
        <h4 style="margin-right:5%;">メールアドレス</h4>
        <p class="field" style="margin-right:5%;"><%= @customer.email %></p>
      </div>

      <div class="field form-inline">
        <h4 style="margin-right:5%;">自己紹介</h4>
        <p class="field" style="margin-right:5%;"><%= @customer.introduction %></p>
      </div>


      <% if customer = current_customer %>
      <%= link_to "編集する", edit_customer_path(current_customer.id), class: "btn btn-success" %>
      <% end %>

      </div>
    </div>
  </div>
</section>