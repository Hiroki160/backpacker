<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h3 class="title">
        <%= @customer.name %>さんのプロフィール<br><br>
          <% if @customer.image.attached? %>
            <%= image_tag @customer.image, size: "200x200" %>
          <% else %>
            <%= image_tag 'no_image', size: "200x200" %>
          <% end %>
      </h3>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">

      <div class="field form-inline">
        <h4 style="margin-right:5%;">ユーザーネーム</h4>
        <p class="field" style="margin-right:5%;"><%= @customer.user_name %></p>
      </div>

      <div class="field form-inline">
        <h4 style="margin-right:5%;">メールアドレス</h4>
        <p class="field" style="margin-right:5%;"><%= @customer.email %></p>
      </div>

      <div class="field form-inline">
        <h4 style="margin-right:5%;">自己紹介</h4>
        <p class="field" style="margin-right:5%;"><%= @customer.introduction %></p>
      </div>

      <div class="field form-inline">
        <h4 style="margin-right:5%;">募集中のリスト</h4>
        <% @guesthouse_community.each do |guesthouse_community| %>
          <p class="field" style="margin-right:5%;"><%= link_to "ゲストハウス", guesthouse_community_path(guesthouse_community), class: "btn btn btn-primary text-white" %></p>
        <% end %>
      </div>

      <div class="field form-inline">
        <h4 style="margin-right:5%;">申請中のリスト</h4>
        <% @guesthouse_apply.each do |guesthouse_apply| %>
          <p class="field" style="margin-right:5%;"><%= link_to "ゲストハウス", guesthouse_apply_path(guesthouse_apply), class: "btn btn btn-primary text-white" %></p>
        <% end %>
      </div>

      <% if customer = current_customer %>
      <%= link_to "編集する", edit_customer_path(current_customer.id), class: "btn btn-success" %>
      <%= link_to "退会する", confirmation_path(current_customer.id), class: "btn btn-success" %>
      <% end %>

      </div>
    </div>
  </div>
</section>